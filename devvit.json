{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "over9000games",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "over9000games",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "permissions": {
    "media": true
  },
  "dev": {
    "subreddit": "over9000games_dev"
  },
  "settings": {
    "global": {
      "openAIKey": {
        "type": "string",
        "label": "OpenAI API Key",
        "isSecret": true
      },
      "geminiKey": {
        "type": "string",
        "label": "Gemini API Key",
        "isSecret": true
      }
    }
  }
}